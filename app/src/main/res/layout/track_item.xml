<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="100dp"
    android:id="@+id/trackItem"
    android:padding="16dp">

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/trackImage"
        android:contentDescription="@string/track_image_content_description"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="16dp" />
    <TextView
        android:id="@+id/trackName"
        android:layout_width="180dp"
        android:layout_height="20dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/trackImage"
        android:layout_toEndOf="@+id/trackImage"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:paddingLeft="16dp" />
    <TextView
        android:layout_width="180dp"
        android:layout_height="20dp"
        android:id="@+id/trackAlbumName"
        android:layout_below="@+id/trackName"
        android:layout_alignLeft="@+id/trackName"
        android:layout_alignStart="@+id/trackName" />

</RelativeLayout>